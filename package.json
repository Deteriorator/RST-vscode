{
    "name": "rst-vscode",
    "displayName": "ReStructured Text Previewer",
    "description": "An extension to preview RST files while typing them",
    "version": "1.0.1",
    "publisher": "tht13",
    "author": "Thomas Haakon Townsend",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tht13/RST-vscode"
    },
    "galleryBanner": {
        "color": "#78d6f0",
        "theme": "light"
    },
    "bugs": "https://github.com/tht13/RST-vscode/issues",
    "homepage": "https://github.com/tht13/RST-vscode/blob/master/README.md",
    "icon" : "./images/icon.png",
    "main": "./out/src/extension",
    "engines": {
        "vscode": "^0.10.8"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:rst.preview"
    ],
    "contributes": {
        "languages": [
            {
                "id": "rst",
                "aliases": [
                    "ReStructured Text",
                    "RST"
                ],
                "extensions": [
                    ".rst",
                    ".rest",
                    ".hrst"
                ]
            }
        ],
        "keybindings": {
            "command": "rst.preview",
            "key": "ctrl+shift+r",
            "when": "editorTextFocus"
        },
        "commands": [
            {
                "command": "rst.preview",
                "title": "Preview RST file"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "file-url": "^1.0.1"
    },
    "devDependencies": {
        "typescript": "^1.7.5",
        "vscode": "^0.11.1"
    }
}