{
  "name": "rst-vscode",
  "displayName": "ReStructured Text Previewer",
  "description": "An extension to preview RST files while typing them",
  "version": "1.3.1",
  "publisher": "tht13",
  "author": "Thomas Haakon Townsend",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/tht13/RST-vscode"
  },
  "galleryBanner": {
    "color": "#78d6f0",
    "theme": "light"
  },
  "bugs": "https://github.com/tht13/RST-vscode/issues",
  "homepage": "https://github.com/tht13/RST-vscode/blob/master/README.md",
  "icon": "media/icon.png",
  "main": "./out/src/extension",
  "engines": {
    "vscode": "1.6.0"
  },
  "categories": [
    "Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:rst.preview",
    "onCommand:rst.previewToSide"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rst",
        "aliases": [
          "RST",
          "ReStructured Text"
        ],
        "extensions": [
          ".rst",
          ".rest",
          ".hrst"
        ]
      }
    ],
    "keybindings": [
      {
        "command": "rst.preview",
        "key": "ctrl+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "rst.previewToSide",
        "key": "ctrl+k r",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "rst.preview",
        "title": "Toggle Preview",
        "category": "ReStructured Text"
      },
      {
        "command": "rst.previewToSide",
        "title": "Open Preview to the Side",
        "category": "ReStructured Text"
      }
    ],
    "grammars": [
      {
        "language": "rst",
        "path": "./syntaxes/restructuredtext.tmlanguage",
        "scopeName": "text.restructuredtext"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "vscode:prepublish": "npm run build",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "preversion": "npm run build",
    "version": "changes",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "file-url": "2.0.0"
  },
  "devDependencies": {
    "@studio/changes": "^1.0.5",
    "@types/file-url": "^1.0.28",
    "@types/node": "^6.0.52",
    "typescript": "2.1.4",
    "vscode": "1.0.3"
  }
}
